<section class="content-header">
  <h1>
    <h1>Restaurants</h1>
  </h1>
</section>

<!-- Main content -->
<section class="content">

  <div class="row">
    <% @restaurants.each do |restaurant| %>
        <div class="col-md-3">
          <!-- USERS LIST -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title"><%= restaurant.name %></h3>
              <div class="box-tools pull-right">
                <span class="label label-default"><i class="glyphicon glyphicon-earphone g"></i> <%= restaurant.phone %></span>
              </div>
            </div><!-- /.box-header -->
            <div class="box-body no-padding" style="background-color: rgba(0, 192, 239, 0.02)">
              <%= link_to restaurant do %>
                  <%= render 'restaurant_img', {restaurant:restaurant} %>
              <% end %>
            </div><!-- /.box-body -->
            <div class="box-footer text-center" style="padding: 0px">
              <p  style="margin: 0px;background-color: rgba(4, 0, 239, 0.16)" >

                <%= truncate restaurant.location,
                             length: 40 %>
              </p>
            </div><!-- /.box-footer -->
          </div><!--/.box -->
        </div><!-- /.col -->
    <% end %>
  </div>
  </div>
</section>