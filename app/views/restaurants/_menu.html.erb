<div class="row">

  <div class="col-md-8">

    <% @items.each do |item| %>
        <section id="product" class="col-md-3">
          <ul class="clear">
            <li data-id="<%= item.id %>">
              <a href="#">
                <%= image_tag(item.image.url , width: "140", height: "100" )	%>
                <h3><%= item.name %></h3>
                <p><%= item.comment %></p>
                <span class="pull-right alert-danger"><%= item.price %> $</span>
              </a>
            </li>
          </ul>
        </section>
    <% end %>

  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading"> <i class="fa  fa-cart-plus"></i> Drop what you want here:</div>
      <div class="panel-body">

    <%= form_for @order , url: {action: "create" , :controller=>"orders"} do |f|%>
    <aside id="sidebar">
      <div class="basket">
        <div class="basket_list" style="width: 100%; min-height: 200px;">
          <div class="head">
            <span class="name">Product name</span>
            <span class="count">Quantity</span>
          </div>
          <ul>
            <!--li>
                <span class="name">Samsung S3 asd asdasdaf dfsdghgfg dgfg</span>
                <input class="count" value="1" type="text">
                <button class="delete">&#10005;</button>
            </li-->
          </ul>

        </div>

      </div>
      <span>Tag your friends:</span>
      <ul id="myTags">
        <!-- Existing list items will be pre-added to the tags -->

      </ul>
      <p id="tag_err" class="alert-danger"></p>
      <%= javascript_tag do %>
          tags =<%= raw @userList.to_json %>;
      <% end %>

    </aside>
        <%=f.button(:class =>'btn btn-success center-block ') do %>
                <i class="fa fa-rocket "> Order now and enjoy!!</i><%	end   %>
    <% end %>
      </div>
    </div>

  </div>

</div>
