<% provide(:title, "Sign in") %>
<p class="login-box-msg">Sign in to start your session</p>
<%= form_for(:session, url: sessions_path) do |f| %>
    <div class="form-group has-feedback">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <div class="row">
        <div class="col-xs-4">
          <%= f.submit "Sign In", class: "btn btn-primary btn-block btn-flat" %>
        </div><!-- /.col -->
      </div>
    </div>
<% end %>

<div class="social-auth-links text-center">
  <p>- OR -</p>
  <%= link_to '/auth/facebook', class: "btn btn-block btn-social btn-facebook btn-flat" do %>
    <i class="fa fa-facebook"></i> Sign in using Facebook
  <% end %>

  <%= link_to '/auth/google_oauth2', class: "btn btn-block btn-social btn-google btn-flat" do %>
    <i class="fa fa-google-plus"></i> Sign in using Google+
  <% end %>
</div><!-- /.social-auth-links -->

<a href="#">I forgot my password</a><br>
<%= link_to 'Register a new membership', signup_path, class: 'text-center' %>