<% provide(:title, 'Groups') %>
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Manage Groups
    <%= link_to "New", new_group_path, remote: true, class: 'btn btn-success' %>
  </h1>
</section>

<!-- Main content -->
<section class="content">

  <div class="row">
    <div  class="col-md-12" id="group-form"  style=""></div>
  </div>

  <div class="row">
    <div class="col-md-6 ">
      <!-- Widget: user widget style 1 -->
      <div class="box box-widget widget-user-2">
      <!-- Add the bg color to the header using any of the bg-* classes -->
          <div class="widget-user-header bg-yellow">
            <h3 class="widget-user-username">Groups</h3>
          </div>
          <div class="box-footer no-padding">
            <ul class="nav nav-stacked" id="groups">
                <% if @groups.blank? %>
                  <li style="padding: 10px">
                    <span class="text">No Groups</span>
                  </li>
                <% else %>
                  <%= render @groups %>
                <% end %>
            </ul>
          </div>
      </div><!-- /.widget-user -->
    </div><!-- /.col -->
    <div class="col-md-6" id="group-data" style="display:none;"></div>
  </div>
</section><!-- /.content -->