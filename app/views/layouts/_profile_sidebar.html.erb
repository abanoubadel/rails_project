<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag("user2-160x160.jpg", class: "img-circle", alt: "User Image") %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <small><%= current_user.email %></small>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Links</li>
      <!-- Optionally, you can add icons to the links -->
      <li class="active">
        <%= link_to user_path(current_user) do %>
            <i class="ion-person"></i> <span>Profile</span>
        <% end %>
      </li>
      <li>
        <%= link_to users_path do %>
          <i class="ion-person-add"></i> <span>Friends</span>
        <% end %>
      </li>
      <li>
        <%= link_to groups_path do %>
            <i class="fa fa-users"></i> <span>Groups</span>
        <% end %>
      </li>
      <li>
        <%= link_to restaurants_list_path do %>
            <i class="fa fa-hand-o-right"></i> <span>Restaurants </span>
        <% end %>
      </li>
      <li>
        <%= link_to orders_path do %>
            <i class="fa fa-check-square-o"></i> <span>Orders</span>
        <% end %>
      </li>
      <li>
        <%= link_to invitations_path do %>
            <i class="fa fa-check-square-o"></i> <span>Invitations</span>
        <% end %>
      </li>

      <li>
        <%= link_to do %>
            <i class="fa fa-info-circle"></i> <span>About</span>
        <% end %>
      </li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>