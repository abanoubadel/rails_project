<% provide(:title, 'Sign up') %>
<p class="login-box-msg">Register a new membership</p>

<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group has-feedback">
      <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
      <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %>
      <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <div class="row">
        <div class="col-xs-4">
          <%= f.submit "Register", class: "btn btn-primary btn-block btn-flat" %>
        </div><!-- /.col -->
      </div>
    </div>
<% end %>

<div class="social-auth-links text-center">
  <p>- OR -</p>
  <%= link_to '/auth/facebook', class: "btn btn-block btn-social btn-facebook btn-flat" do %>
    <i class="fa fa-facebook"></i> Sign up using Facebook
  <% end %>

  <%= link_to '/auth/google_oauth2', class: "btn btn-block btn-social btn-google btn-flat" do %>
    <i class="fa fa-google-plus"></i> Sign up using Google+
  <% end %>
</div><!-- /.social-auth-links -->

<%= link_to 'Already have an account?', signin_path, class: 'text-center' %>